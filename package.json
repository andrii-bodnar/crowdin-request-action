{
  "name": "crowdin-request-action",
  "version": "0.2.0",
  "private": true,
  "description": "A GitHub Action to send arbitrary requests to Crowdin's REST API",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test-coverage": "jest --ci --reporters=jest-junit --reporters=default --coverage --coverageReporters=cobertura --coverageReporters=html",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrii-bodnar/crowdin-request-action"
  },
  "keywords": [
    "actions",
    "crowdin",
    "api",
    "request"
  ],
  "author": {
    "name": "Andrii Bodnar",
    "url": "https://github.com/andrii-bodnar"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@crowdin/crowdin-api-client": "^1.35.0",
    "axios": "^1.7.4",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "normalize-url": "^8.0.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.5.1",
    "@types/pretty": "^2.0.3",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "2.8.8",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  }
}
